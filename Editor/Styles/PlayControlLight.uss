.controlButton {
    background-color: #CBCBCB;
    border-color: #2A2A2A;
}

.controlButton:hover{
    background-color: #C1C1C1;

}

#firstFrame {
    background-image : resource("Packages/com.unity.kinematica/Editor/Images/FirstFrame.png");
}

#previousFrame {
    background-image : resource("Packages/com.unity.kinematica/Editor/Images/SkipBack.png");
}

